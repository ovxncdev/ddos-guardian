# ===========================================
# DDOS-GUARDIAN CONFIGURATION
# ===========================================
# Copy this file to .env and modify as needed
# ===========================================

# Environment: development, production, test
NODE_ENV=development

# Server
PORT=3000
HOST=0.0.0.0

# Upstream services (comma-separated)
# Example: http://nginx:8080,http://service-b:3000
UPSTREAM_HOSTS=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_BLOCK_DURATION_MS=300000

# Bot Detection
BOT_DETECTION_ENABLED=true
BOT_SCORE_THRESHOLD=70

# Logging: error, warn, info, debug
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=

# Security
TRUST_PROXY=true
STEALTH_MODE=true

# Docker (usually auto-detected)
# RUNNING_IN_DOCKER=false

# Paths (usually auto-resolved)
# DATA_DIR=/custom/path
